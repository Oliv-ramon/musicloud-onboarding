{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(entity|service).(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleDirectories": ["node_modules", "src"]
}
